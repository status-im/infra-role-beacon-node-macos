<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <key>Label</key>
  <string>{{ beacon_node_build_launchd_service_name }}</string>

  <key>WorkingDirectory</key>
  <string>{{ beacon_node_service_path }}</string>

  <key>ProgramArguments</key>
  <array>
    <string>{{ beacon_node_build_script_path }}</string>
  </array>

  <key>UserName</key>
  <string>{{ beacon_node_user }}</string>

  <key>GroupName</key>
  <string>{{ beacon_node_group }}</string>

  <key>StartCalendarInterval</key>
  <dict>
    <key>Hour</key>
    <integer>{{ beacon_node_build_start_time.split(':')[0] }}</integer>
    <key>Minute</key>
    <integer>{{ beacon_node_build_start_time.split(':')[1] }}</integer>
  </dict>

  <key>TimeOut</key>
  <integer>{{ beacon_node_build_timeout }}</integer>

  <key>StandardErrorPath</key>
  <string>{{ beacon_node_build_log_path }}</string>

  <key>StandardOutPath</key>
  <string>{{ beacon_node_build_log_path }}</string>
</dict>
</plist>
